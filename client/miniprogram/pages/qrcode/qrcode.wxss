/* pages/qrcode/qrcode.wxss */

/* 上方提示信息范围 */
.instruction {
  width: 100vw;
  height: 15vh;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}

/* 数字 */
.number {
  width: 10vw;
  height: 6vh;
  border-bottom: 2rpx solid black;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 二维码区域 */
.qrcode_area {
  height: 75vh;
  width: 90vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}

/* 二维码提示信息 */
.instruction_qrcode {
  height: 10vh;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}

/* 二维码 */
.qrcode {
  height: 60vh;
  width: 100%;
}

/* 背景 */
.background {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}