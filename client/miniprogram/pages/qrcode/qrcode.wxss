/* pages/qrcode/qrcode.wxss */

.instruction{
  width:100vw;
  height:15vh;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}

.number{
  width:10vw;
  height:6vh;
  border-bottom: 2rpx solid black;
  display: flex;
  justify-content: center;
  align-items: center;
}

.qrcode_area{
  height: 75vh;
  width:90vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}

.instruction_qrcode{
  height:10vh;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}

.exit{
  border:2rpx solid black;
  background-color: lightgreen;
}

.exit:not([size='mini'])
{
  width:35vw;
}

.enter{
  border:2rpx solid black;
}

.enter:not([size='mini'])
{
  width:35vw;
}

.qrcode{
  height: 60vh;
  width:100%;
  background-color: white;
}

.background{
  height:100vh;
  width:100vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}