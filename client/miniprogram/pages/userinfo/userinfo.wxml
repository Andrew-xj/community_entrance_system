<!--pages/userinfo/userinfo.wxml-->
<view class='background'>
	<view class='top'>
		<view class='avatar'>
			<open-data type="userAvatarUrl"></open-data>
		</view>
	</view>
	<view class='middle'>
		<view class='bar'>
			<view class='text'>姓名：</view>
			<input class="input" bindinput="name" type="text" auto-focus placeholder="请输入您的姓名" />
		</view>
		<view class='bar'>
			<view class='text'>手机：</view>
			<input class="input" bindinput="phone" type="number" auto-focus placeholder="请输入手机号码" />
		</view>
		<view class='bar'>
			<view class='text'>小区：</view>
			<input class="input" bindinput="neighbourhood" type="text" auto-focus placeholder="请输入小区名称" />
		</view>
		<view class='bar_s'>
			<input class="input_s" bindinput="block" type="number" auto-focus placeholder="例:1" />
			<view class='text_s1'>栋</view>
			<input class="input_s" bindinput="unit" type="number" auto-focus placeholder="例:1" />
			<view class='text_s2'>单元</view>
			<input class="input_s" bindinput="room" type="number" auto-focus placeholder="例:101" />
			<view class='text_s1'>室</view>
		</view>
	</view>
	<view class='bottom'>
		<button class='btn' bindtap='save'>保存</button>
		<button class='btn' bindtap='qr'>二维码</button>
	</view>
</view>