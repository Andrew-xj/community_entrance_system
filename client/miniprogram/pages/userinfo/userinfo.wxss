/* pages/userinfo/userinfo.wxss */

/* 顶部头像范围 */
.top {
  width: 100vw;
  height: 20vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 头像 */
.avatar {
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  margin: auto;
}

/* 提示信息 */
.ins{
  height:15vh;
  width:100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}

/* 中部信息范围 */
.middle {
  height: 45vh;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}

/* 普通单条信息框范围 */
.bar {
  width: 80vw;
  height: 7.5vh;
  border-bottom: 2rpx solid black;
  display: flex;
  flex-direction: row;
  text-align: center;
}

/* 地址框范围 */
.bar_s {
  width: 80vw;
  height: 7.5vh;
  border-bottom: 2rpx solid black;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
  align-items: center;
}

/* 提示文字 */
.text {
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
}

/* 单字小框提示文字 */
.text_s1 {
  width: 9%;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 3%;
}

/* 双字小框提示文字 */
.text_s2 {
  width: 18%;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 3%;
}

/* 输入框 */
.input {
  width: 80%;
  height: 100%;
}

/* 小型输入框 */
.input_s {
  width: 20%;
  height: 80%;
  border: 0.5px solid black;
  border-radius: 20%;
}

/* 底部按钮范围 */
.bottom {
  height: 20vh;
  width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/* 按钮 */
.btn {
  height: 50%;
  border: 2px solid black;
  margin-top: auto;
  margin-bottom: auto;
  text-align: center;
  text-justify: center;
}

/* 按钮尺寸 */
.btn:not([size='mini']) {
  /* 修改宽高 */
  height: 100rpx;
  width: 40%;
}

/* 背景 */
.background {
  height: 100vh;
  width: 100vw;
}