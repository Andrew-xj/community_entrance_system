/* pages/userinfo/userinfo.wxss */

.top{
  width:100vw;
  height:20vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar{
  overflow:hidden;  
  width: 120rpx;  
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  margin: auto;
}

.middle{
  height:60vh;
  width:100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-color: white;
}

.bar{
  width:80vw;
  height:7.5vh;
  border-bottom: 2rpx solid black;
  display: flex;
  flex-direction: row;
  text-align: center;
}

.bar_s{
  width:80vw;
  height:7.5vh;
  border-bottom: 2rpx solid black;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.text{
  width:20%;
  height:100%;
  display: flex;
  align-items: center;
}

.text_s1{
  width:9%;
  height:100%;
  display: flex;
  align-items: center;
  margin-left:3%;
}

.text_s2{
  width:18%;
  height:100%;
  display: flex;
  align-items: center;
  margin-left:3%;
}

.input{
  width:80%;
  height:100%;
}

.input_s{
  width:20%;
  height:80%;
  border: 0.5px solid black;
  border-radius: 20%;
}

.bottom{
  height:20vh;
  width:100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn{
  height:50%;
  border:2px solid black;
  margin-top:auto;
  margin-bottom: auto;
  text-align: center;
  text-justify: center;
}

.btn:not([size='mini'])
{
  /* 修改宽高 */
  height: 100rpx;
  width: 40%;
}

.background{
  height:100vh;
  width:100vw;
  background-color: lightgray;
}